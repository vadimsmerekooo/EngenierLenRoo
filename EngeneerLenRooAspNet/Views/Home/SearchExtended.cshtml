@using EngeneerLenRooAspNet.Services
@model EngeneerLenRooAspNet.ViewModels.SearchExtendedViewModel

@{
    ViewData["Title"] = "Поиск по сотрудникам";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Кабинеты</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Расширенный поиск
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Поиск по сотрудникам
        </li>
    </ol>
</nav>
<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Сотрудники
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>ФИО</th>
                                    <th>Описание</th>
                                    <th>Кабинет</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ФИО</th>
                                    <th>Описание</th>
                                    <th>Кабинет</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.Employees.Where(c => c.Cabinet != null))
                                {
                                    <tr>
                                        <th>@item.Fio</th>
                                        <th>@item.Description</th>
                                        <th>
                                            <a class="btn-link" asp-action="Info" asp-route-id="@item.Cabinet.Id">@item.Cabinet.Name</a>
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
