@model Report071CheckViewModel

@{
    ViewData["Title"] = "Отчет по 071 счету";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Index">Кабинеты</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Отчет по 071 счету</li>
    </ol>
</nav>
<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Инвентарь
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Название</th>
                                    <th>Тип</th>
                                    <th>Общее кол-во</th>
                                    <th>Кабинеты</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Название</th>
                                    <th>Тип</th>
                                    <th>Общее кол-во</th>
                                    <th>Кабинеты</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.Checks)
                                {
                                <tr>
                                    <th scope="row" class="col-3">@item.Name</th>
                                    <th scope="row" class="col-2">@item.TypeTechnique</th>
                                    <th scope="row" class="col-2">@item.Count()</th>
                                    <th scope="row" class="col-5">
                                        @foreach (var itemCheck in item.Cabinets)
                                        {
                                            <a class="btn-link" asp-action="Info" asp-route-id="@itemCheck.CabinetId">@($"{itemCheck.Name}(x{itemCheck.Count}),")</a>
                                        }
                                    </th>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
